.about_us_card
    display flex
    flex-direction column
    padding 2em

    &__reverse
        flex-direction column-reverse

    &__skills
        display flex

        img
            width 40px
            height 40px
            margin 2em .5rem 2em 0

    &__title
        font-size 2rem
        font-weight bold
        color $color-primary

    &__description
        font-size 1.2rem
        color $color-text
        margin 2em 0

    &__image
        text-align center

        img
            width: 200px
            height: 200px
            border-radius 50%
            overflow hidden
