.navbar
    width 100%
    max-width 1344px
    margin 2em auto 0
    background-color white

    &__logo
        max-width 100px

        img
            display flex
            object-fit cover
            max-width 100%

    &__options
        width 250px

    &__button
        padding .8rem 1.2rem
        background-color white
        border 2px solid transparent
        border-radius 10000px
        font-size 18px
        font-family $font-europe
        white-space no-wrap

        &--main
            border-color $color-primary
            color $color-primary
